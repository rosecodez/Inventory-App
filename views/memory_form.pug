extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='brand') Brand:
      input#brand.form-control(type='text', placeholder='Brand', name='brand', required, value=(undefined === memoryItem ? '' : memoryItem.brand))

    div.form-group
      label(for='type') Type:
      input#type.form-control(type='text', placeholder='Type', name='type', required, value=(undefined === memoryItem ? '' : memoryItem.type))

    div.form-group
      label(for='series') Series:
      input#series.form-control(type='text', placeholder='Series', name='series', required, value=(undefined === memoryItem ? '' : memoryItem.series))

    div.form-group
      label(for='model') Model:
      input#model.form-control(type='text', placeholder='Model', name='model', required, value=(undefined === memoryItem ? '' : memoryItem.model))

    div.form-group
      label(for='capacity') Capacity:
      input#capacity.form-control(type='text', placeholder='Capacity', name='capacity', required, value=(undefined === memoryItem ? '' : memoryItem.capacity))

    div.form-group
      label(for='speed') Speed:
      input#speed.form-control(type='text', placeholder='Speed', name='speed', required, value=(undefined === memoryItem ? '' : memoryItem.speed))
    
    div.form-group
      label(for='dateFirstAvailable') Date First Available:
      input#dateFirstAvailable.form-control(type='date', placeholder='YYYY-MM-DD', name='dateFirstAvailable', value=(undefined === memoryItem ? '' : memoryItem.dateFirstAvailable ? memoryItem.dateFirstAvailable.toISOString().substr(0, 10) : ''))

    button.btn.btn-primary(type='submit') Submit

  if errors && errors.length > 0
    ul.text-danger
      each error in errors
        li= error.msg
